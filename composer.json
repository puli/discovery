{
    "name": "puli/discovery",
    "description": "Discovers Puli resources bound to predefined types.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "puli/repository": "^1.0",
        "webmozart/glob": ">=2.0,<4.0",
        "webmozart/assert": "^1.0",
        "ramsey/uuid": "^2.8"
    },
    "require-dev": {
        "webmozart/key-value-store": "^1.0.0-beta6",
        "phpunit/phpunit": "^4.6",
        "sebastian/version": "^1.0.1"
    },
    "suggest": {
        "webmozart/key-value-store": "to use the KeyValueStoreDiscovery"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Puli\\Discovery\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\Discovery\\Tests\\": "tests/",
            "Puli\\Repository\\Tests\\": "vendor/puli/repository/tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/puli/issues/issues"
    }
}
