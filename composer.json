{
    "name": "puli/discovery",
    "description": "Publishes and discovers artifacts across Puli packages.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "php": "^5.4|^7.0",
        "webmozart/assert": "^1.0",
        "webmozart/expression": "^1.0.0-beta5",
        "ramsey/uuid": "^3.0"
    },
    "require-dev": {
        "puli/repository": "^1.0-beta8@dev,<1.1",
        "webmozart/key-value-store": "^1.0.0-beta6@dev",
        "webmozart/json": "^1.2",
        "phpunit/phpunit": "^4.6",
        "sebastian/version": "^1.0.1"
    },
    "suggest": {
        "puli/repository": "to bind and discover Puli resources",
        "webmozart/json": "to use the JSON discovery",
        "webmozart/key-value-store": "to use the key-value store discovery"
    },
    "autoload": {
        "psr-4": {
            "Puli\\Discovery\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\Discovery\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/puli/issues/issues"
    }
}
